 */
function onboarding_view_access_callback($uid = null){
  global $user, $company;
  $cmpNid = isset($_SESSION['company'])?$_SESSION['company']:'';
  if ($uid == null) {
    $uid = $user->uid;
  } 
  if($uid == $user->uid) {
  if(isset($user->roles[3])) {
