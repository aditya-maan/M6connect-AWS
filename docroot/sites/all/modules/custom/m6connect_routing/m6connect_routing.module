function _sort_routing_order_by_mapping($orderMapping, &$sortOrderArray){
  asort($orderMapping);	
  $storageOrder = array();
  $orderEmpty = array();
  foreach($orderMapping as $uniqueId => $order){	
    if(is_numeric($order)){
      $storageOrder[] = $uniqueId;  
    }else{
	  $orderEmpty[] = $uniqueId;
    } 
  }
  $sortOrderArray = array_merge($storageOrder, $orderEmpty);
}

